    tr
      td(align="center" valign="top" style="padding-top:50px")
        table(border="0" cellpadding="0" cellspacing="0" class="container" width="600" style="background-color:#ffffff;")
          tr
            td(align="left")
              img(src="https://s3.eu-central-1.amazonaws.com/periscopefiles/appFiles/mail_header600.png")
          tr(height="300")
